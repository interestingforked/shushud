#!/usr/bin/env ruby
# encoding: utf-8

trap("INT")  {exit}
trap("TERM") {exit}

$: << File.expand_path("lib")

require "shushu"
require "stalker"

PaymentService.ready_process.each do |pend|
  recid, pmid = pend["receivable_id"], pend["payment_method_id"]
  Stalker.enqueue("payment.process",{:recid  => recid, :pmid => pmid})
end
